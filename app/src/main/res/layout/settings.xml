<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dark_mode_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="16dp">

    <!-- Back Button -->
            <ImageView
                android:id="@+id/back_button"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:src="@drawable/ic_back_dark"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/settings_title"
                app:layout_constraintBottom_toBottomOf="@id/username_subtitle"/>

            <!-- Settings Title -->
            <TextView
                android:id="@+id/settings_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/geist_black"
                android:text="Settings"
                android:textColor="#FFFFFF"
                android:textSize="21sp"
                android:letterSpacing="-0.016"
                android:lineSpacingMultiplier="0.5"
                app:layout_constraintStart_toEndOf="@id/back_button"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Username Subtitle -->
            <TextView
                android:id="@+id/username_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/geist_regular"
                android:text="\@alvarocrsc"
                android:textColor="#A5A5A5"
                android:textSize="11sp"
                android:letterSpacing="-0.03"
                android:layout_marginTop="-2dp"
                app:layout_constraintStart_toStartOf="@id/settings_title"
                app:layout_constraintTop_toBottomOf="@id/settings_title" />

            <!-- PROFILE SECTION -->
            <TextView
                android:id="@+id/profile_section_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/geist_regular"
                android:text="Profile"
                android:textColor="#A5A5A5"
                android:textSize="12sp"
                android:letterSpacing="-0.03"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/username_subtitle" />

            <!-- Account & Privacy -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/account_privacy_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_section_header">

                <!-- Profile Picture -->
                <ImageView
                    android:id="@+id/settings_profile_picture"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/linkin_park"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/geist_medium"
                    android:text="Account &amp; Privacy"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    android:letterSpacing="-0.025"
                    app:layout_constraintStart_toEndOf="@id/settings_profile_picture"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Import Files -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/import_files_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/account_privacy_item">

                <ImageView
                    android:id="@+id/import_icon"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_share_light"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/geist_medium"
                    android:text="Import files"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    android:letterSpacing="-0.025"
                    app:layout_constraintStart_toEndOf="@id/import_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Sign Out -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/sign_out_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/import_files_item">

                <ImageView
                    android:id="@+id/logout_icon"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_logout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/geist_medium"
                    android:text="Sign Out"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    android:letterSpacing="-0.025"
                    app:layout_constraintStart_toEndOf="@id/logout_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Divider Line -->
            <View
                android:id="@+id/divider_1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="#333333"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sign_out_item" />

            <!-- APPEARANCE SECTION -->
            <TextView
                android:id="@+id/appearance_section_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/geist_regular"
                android:text="Appearance"
                android:textColor="#A5A5A5"
                android:textSize="12sp"
                android:letterSpacing="-0.03"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider_1" />

            <!-- Theme -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/theme_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/appearance_section_header">

                <ImageView
                    android:id="@+id/theme_icon"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_theme_dark"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/theme_title"
                    app:layout_constraintBottom_toBottomOf="@id/theme_subtitle"/>

                <TextView
                    android:id="@+id/theme_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/geist_medium"
                    android:text="Theme"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    android:letterSpacing="-0.025"
                    app:layout_constraintStart_toEndOf="@id/theme_icon"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/theme_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/geist_regular"
                    android:text="Current: Dark"
                    android:textColor="#A5A5A5"
                    android:textSize="10sp"
                    android:letterSpacing="-0.03"
                    android:layout_marginTop="-5dp"
                    app:layout_constraintStart_toStartOf="@id/theme_title"
                    app:layout_constraintTop_toBottomOf="@id/theme_title" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Divider Line -->
            <View
                android:id="@+id/divider_2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="#333333"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/theme_item" />

            <!-- ABOUT SECTION -->
            <TextView
                android:id="@+id/about_section_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/geist_regular"
                android:text="About"
                android:textColor="#A5A5A5"
                android:textSize="12sp"
                android:letterSpacing="-0.03"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider_2" />

            <!-- Version -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/version_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/about_section_header">

                <ImageView
                    android:id="@+id/info_icon"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_info_dark"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/geist_medium"
                    android:text="Version 1.0.0 (01)"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    android:letterSpacing="-0.025"
                    app:layout_constraintStart_toEndOf="@id/info_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Privacy Policy -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/privacy_policy_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/version_item">

                <ImageView
                    android:id="@+id/privacy_icon"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_privacy_dark"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/geist_medium"
                    android:text="Privacy Policy"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    android:letterSpacing="-0.025"
                    app:layout_constraintStart_toEndOf="@id/privacy_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Divider Line -->
            <View
                android:id="@+id/divider_3"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="#333333"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/privacy_policy_item" />

            <!-- ACCOUNT SECTION -->
            <TextView
                android:id="@+id/account_section_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/geist_regular"
                android:text="Account"
                android:textColor="#A5A5A5"
                android:textSize="12sp"
                android:letterSpacing="-0.03"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider_3" />

            <!-- Delete Account -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/delete_account_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/account_section_header">

                <ImageView
                    android:id="@+id/delete_icon"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_trash"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/geist_medium"
                    android:text="Delete Account"
                    android:textColor="#FC5154"
                    android:textSize="13sp"
                    android:letterSpacing="-0.025"
                    app:layout_constraintStart_toEndOf="@id/delete_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Discord Button -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/discord_button"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_discord_button"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/contact_us_button"
                app:layout_constraintTop_toBottomOf="@id/delete_account_item">

                <ImageView
                    android:id="@+id/discord_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_discord"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/discord_name"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed" />

                <TextView
                    android:id="@+id/discord_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/geist_medium"
                    android:text="Discord"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    android:letterSpacing="-0.025"
                    app:layout_constraintStart_toEndOf="@id/discord_icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Contact Us Button -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/contact_us_button"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_contact_us_button"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintStart_toEndOf="@id/discord_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/discord_button">

                <ImageView
                    android:id="@+id/mail_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_mail"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/contact_us_name"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed" />

                <TextView
                    android:id="@+id/contact_us_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/geist_medium"
                    android:text="Contact Us"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    android:letterSpacing="-0.025"
                    app:layout_constraintStart_toEndOf="@id/mail_icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Fixed Bottom Menu Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menu_bar"
        android:layout_width="252dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_menu_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="53dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:elevation="8dp">

        <FrameLayout
            android:id="@+id/home_icon_container"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/home_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_home_dark" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/stats_icon_container"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/home_icon_container"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/stats_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_stats_dark" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/discover_icon_container"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/stats_icon_container"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/discover_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_stars_dark" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/profile_icon_container"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/discover_icon_container"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/profile_circle_bg"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_circle_background" />

            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/linkin_park" />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
