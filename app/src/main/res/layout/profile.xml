<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dark_mode_p"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <!-- Fixed Top Profile Header -->

    <!-- Scrollable Content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#121212"
        android:elevation="4dp"
        android:paddingTop="16dp"
        android:paddingBottom="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="71dp"
            android:scaleType="centerCrop"
            android:src="@drawable/linkin_park"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Username -->
        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/geist_regular"
            android:text="Ãlvaro"
            android:textColor="#FFFFFF"
            android:textSize="21sp"
            app:layout_constraintStart_toEndOf="@id/profile_picture"
            app:layout_constraintTop_toTopOf="@id/profile_picture" />

        <!-- Spotify Icon -->
        <ImageView
            android:id="@+id/spotify_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_spotify"
            app:layout_constraintBottom_toBottomOf="@id/username"
            app:layout_constraintStart_toEndOf="@id/username"
            app:layout_constraintTop_toTopOf="@id/username" />

        <!-- Invite Button -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/invite_button"
            android:layout_width="72dp"
            android:layout_height="25dp"
            android:layout_marginTop="67dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_invite_button"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintEnd_toStartOf="@id/settings_button"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/invite_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/geist_medium"
                android:text="Invite"
                android:textColor="#000000"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/share_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/share_icon"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginStart="2dp"
                android:src="@drawable/ic_share_dark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/invite_text"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Settings Button -->
        <ImageView
            android:id="@+id/settings_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="16dp"
            android:padding="8dp"
            android:src="@drawable/ic_settings_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/invite_button" />

        <!-- Handle -->
        <TextView
            android:id="@+id/handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/geist_regular"
            android:text="\@alvarocrsc"
            android:textColor="#999999"
            android:textSize="11sp"
            app:layout_constraintStart_toEndOf="@id/profile_picture"
            app:layout_constraintTop_toBottomOf="@id/username" />

        <!-- Edit Profile Button -->
        <TextView
            android:id="@+id/edit_profile_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edit_profile_button"
            android:fontFamily="@font/geist_regular"
            android:paddingStart="12dp"
            android:paddingTop="4dp"
            android:paddingEnd="12dp"
            android:paddingBottom="4dp"
            android:text="Edit profile"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@id/profile_picture"
            app:layout_constraintTop_toBottomOf="@id/handle" />

        <!-- Friends Icon -->
        <ImageView
            android:id="@+id/friends_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_friends_dark"
            app:layout_constraintBottom_toBottomOf="@id/edit_profile_button"
            app:layout_constraintStart_toEndOf="@id/edit_profile_button"
            app:layout_constraintTop_toTopOf="@id/edit_profile_button" />

        <!-- Friends Text -->
        <TextView
            android:id="@+id/friends_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:fontFamily="@font/geist_regular"
            android:text="3 friends"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/friends_icon"
            app:layout_constraintStart_toEndOf="@id/friends_icon"
            app:layout_constraintTop_toTopOf="@id/friends_icon" />

        <!-- Time Filter Buttons Container -->
        <LinearLayout
            android:id="@+id/time_filters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:gravity="start"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_picture">

            <TextView
                android:id="@+id/filter_7days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bg_filter_unselected"
                android:fontFamily="@font/geist_regular"
                android:paddingStart="17dp"
                android:paddingTop="4dp"
                android:paddingEnd="17dp"
                android:paddingBottom="4dp"
                android:text="7 days"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/filter_30days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bg_filter_unselected"
                android:fontFamily="@font/geist_regular"
                android:paddingStart="17dp"
                android:paddingTop="4dp"
                android:paddingEnd="17dp"
                android:paddingBottom="4dp"
                android:text="30 days"
                android:textColor="#E56060"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/filter_6months"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bg_filter_unselected"
                android:fontFamily="@font/geist_regular"
                android:paddingStart="17dp"
                android:paddingTop="4dp"
                android:paddingEnd="17dp"
                android:paddingBottom="4dp"
                android:text="6 months"
                android:textColor="#999999"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/filter_alltime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_filter_unselected"
                android:fontFamily="@font/geist_regular"
                android:paddingStart="17dp"
                android:paddingTop="4dp"
                android:paddingEnd="17dp"
                android:paddingBottom="4dp"
                android:text="All time"
                android:textColor="#999999"
                android:textSize="10sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/profile_header"
        app:layout_constraintBottom_toTopOf="@id/menu_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <!-- Your scrollable content will go here -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scrollable content goes here"
                android:textColor="#FFFFFF"
                android:padding="16dp"/>

        </LinearLayout>

    </ScrollView>

    <!-- Fixed Bottom Menu Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menu_bar"
        android:layout_width="252dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_menu_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="53dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:elevation="8dp">

        <ImageView
            android:id="@+id/home_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_home_dark"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/stats_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_stats_dark"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/home_icon"
            android:layout_marginStart="37dp"/>

        <ImageView
            android:id="@+id/discover_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_stars_dark"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/stats_icon"
            android:layout_marginStart="37dp"/>

        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/linkin_park"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/discover_icon"
            android:layout_marginStart="37dp"
            android:translationZ="1dp"/>

        <View
            android:id="@+id/profile_circle_bg"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:background="@drawable/bg_circle_background"
            app:layout_constraintTop_toTopOf="@id/profile_icon"
            app:layout_constraintBottom_toBottomOf="@id/profile_icon"
            app:layout_constraintStart_toStartOf="@id/profile_icon"
            app:layout_constraintEnd_toEndOf="@id/profile_icon"
            android:translationZ="0dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>